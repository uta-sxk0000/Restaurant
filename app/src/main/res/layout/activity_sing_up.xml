<?xml version="1.0" encoding="utf-8"?>
<!--sign up screen
    layout_width and height are match_parent here which means fill the available space
    the column is centered with padding so the inputs and buttons feel clean and easy to tap-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!--email text field with an email keyboard-->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <!--password text field uses password input type to hide the characters
        we do a basic non empty check in code and let firebase handle strength rules for now-->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginBottom="24dp"/>

    <!--small label for the account type choice below-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Type"
        android:layout_marginBottom="8dp"/>

    <!--horizontal picker where the user selects user or restaurant
        user is checked by default so most signups are one tap-->
    <RadioGroup
        android:id="@+id/radioGroupAccountType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/radioUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioRestaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant"/>
    </RadioGroup>

    <!--creates the account when tapped-->
    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account"/>

    <!--quick link to reservation screen to speed up testing flows
        handy during demos without going back to the main menu-->
    <Button
        android:id="@+id/buttonGoToReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Make a Reservation"
        android:layout_marginTop="16dp"/>
</LinearLayout>
