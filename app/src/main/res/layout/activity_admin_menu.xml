<?xml version="1.0" encoding="utf-8"?>
<!--admin dashboard screen
    simple stack: scrollview > linear layout > title + 2 column grid
    using built-in android icons with android:drawableTop which means the icon sits above the text on each button
    i chose built-in icons so i donâ€™t need extra libraries or themes and it keeps the ui stable for demo-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="55dp">

        <!--title centered to match the user menu look
            big, bold, dark gray so it reads like a header and stays consistent across both dashboards-->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="sans-serif-smallcaps"
            android:paddingBottom="16dp"
            android:text="@string/title_admin_dashboard"
            android:textColor="#333333"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--two column grid of buttons
            each button shows an icon on top and a short label for quick scanning-->
        <GridLayout
            android:id="@+id/adminButtonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:columnCount="2"
            android:padding="8dp"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            >

            <!--reservations button with calendar icon-->
            <Button
                android:id="@+id/btnReservations"
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:drawableTop="@android:drawable/ic_menu_today"
                android:drawablePadding="8dp"
                android:stateListAnimator="@null"
                android:background="#f7f7f7"
                android:text="@string/label_reservations"
                android:fontFamily="sans-serif-light"/>

            <!--queue button with sort icon to suggest ordering-->
            <Button
                android:id="@+id/btnQueue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:drawableTop="@android:drawable/ic_menu_sort_by_size"
                android:drawablePadding="8dp"
                android:stateListAnimator="@null"
                android:background="#f7f7f7"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_queue" />

            <!--wait time button placeholder uses history style icon to suggest time-->
            <Button
                android:id="@+id/btnWaitTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:drawableTop="@android:drawable/ic_menu_recent_history"
                android:drawablePadding="8dp"
                android:stateListAnimator="@null"
                android:background="#f7f7f7"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_wait_time" />

            <!--settings doubles as admin actions like logout so it uses the manage icon-->
            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:drawableTop="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp"
                android:stateListAnimator="@null"
                android:background="#f7f7f7"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_settings"
                />

            <!--create restaurant spans both columns so it feels like one main call to action-->
            <Button
                android:id="@+id/btnCreateRestaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="8dp"
                android:drawableTop="@android:drawable/ic_input_add"
                android:drawablePadding="8dp"
                android:background="#f7f7f7"
                android:fontFamily="sans-serif-light"
                android:text="@string/label_create_restaurant" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
