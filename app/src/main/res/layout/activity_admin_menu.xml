<?xml version="1.0" encoding="utf-8"?>
<!--admin dashboard screen
    simple stack: scrollview > linear layout > title + 2 column grid
    using built-in android icons with android:drawableTop which means the icon sits above the text on each button
    i chose built-in icons so i donâ€™t need extra libraries or themes and it keeps the ui stable for demo-->

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!--title centered to match the user menu look
            big, bold, dark gray so it reads like a header and stays consistent across both dashboards-->
        <TextView
            android:id="@+id/tvAdminTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_admin_dashboard"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="16dp" />

        <!--two column grid of buttons
            each button shows an icon on top and a short label for quick scanning-->
        <GridLayout
            android:id="@+id/adminButtonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="3"
            android:useDefaultMargins="true"
            android:alignmentMode="alignMargins"
            android:padding="8dp">
            <!-- reservations button with calendar icon-->
            <Button
                android:id="@+id/btnReservations"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="@string/label_reservations"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_menu_today"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center"
                />

            <!--queue button with sort icon to suggest ordering-->
            <Button
                android:id="@+id/btnQueue"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="@string/label_queue"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_menu_sort_by_size"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center" />

            <!--reservation requests button with a notification-style icon-->
            <Button
                android:id="@+id/btnReservationRequests"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="Reservation Requests"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_menu_info_details"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center"
                />

            <!--settings doubles as admin actions like logout so it uses the manage icon-->
            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="@string/label_settings"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_menu_manage"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center"
                />

            <!--create restaurant button takes up one column-->
            <Button
                android:id="@+id/btnCreateRestaurant"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="@string/label_create_restaurant"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_input_add"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center"
                />

            <!--notifications button with a mail icon-->
            <Button
                android:id="@+id/btnNotifications"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:layout_columnWeight="1"
                android:text="Notifications"
                android:textSize="10sp"
                android:drawableTop="@android:drawable/ic_dialog_email"
                android:drawablePadding="8dp"
                android:includeFontPadding="false"
                android:gravity="center"
                />

        </GridLayout>

    </LinearLayout>
</ScrollView>
