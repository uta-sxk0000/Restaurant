<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_person"
            android:contentDescription="User Icon"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQueueItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name (Party of X)"
                android:textSize="18sp"
                android:textColor="#333333"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQueueItemWaitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Waiting for X minutes"
                android:textSize="14sp"
                android:textColor="#666666"/>

        </LinearLayout>

        <Button
            android:id="@+id/btnRemoveFromQueue"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Remove"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="#D32F2F"
            android:background="@drawable/button_remove_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
