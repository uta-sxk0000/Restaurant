<?xml version="1.0"  encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvQueueItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="User Name : Party of X"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvQueueItemWaitTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="20sp"
                android:fontFamily="sans-serif-light"
                android:text="Wait Time: X " />

        </LinearLayout>

        <Button
            android:id="@+id/btnRemoveFromQueue"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Seat"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:textSize="14sp"
            android:textColor="#D32F2F"
            android:background="@drawable/button_remove_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- for the queue manip-->
            <Button
                android:id="@+id/button_move_up"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:backgroundTint="#489cd0"
                android:drawableStart="@android:drawable/arrow_up_float"
                android:text=""/>

            <Button
                android:id="@+id/button_move_down"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:backgroundTint="#8e27f1"
                android:drawableStart="@android:drawable/arrow_down_float"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
