<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkInRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F5F5F5"
    android:padding="24dp"
    tools:context=".CheckInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ready to Check In?"
        android:textSize="28sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_check_in_circle"
        android:contentDescription="Check-in Icon"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let the restaurant know you have arrived."
        android:textSize="16sp"
        android:textColor="#666666"
        android:textAlignment="center"
        android:layout_marginBottom="48dp"/>

    <Button
        android:id="@+id/btnArrived"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/arrived"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:contentDescription="@string/arrived" />

</LinearLayout>
