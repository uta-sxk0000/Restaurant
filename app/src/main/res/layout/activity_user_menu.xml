<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MenuActivity">

    <!-- Dashboard Title -->
    <TextView
        android:id="@+id/tvDashboardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="172dp"
        android:text="@string/user_dashboard"
        android:textColor="#333333"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="3"
        android:useDefaultMargins="true"
        android:padding="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDashboardTitle">

        <!-- Check In -->
        <Button
            android:id="@+id/btnCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/check_in"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_menu_myplaces"
            android:drawablePadding="8dp" />

        <!-- Make Reservation -->
        <Button
            android:id="@+id/btnMakeReservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/make_reservation"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_menu_add"
            android:drawablePadding="8dp" />

        <!-- View Status -->
        <Button
            android:id="@+id/btnViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/view_status"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp" />

        <!-- View Reservation -->
        <Button
            android:id="@+id/btnViewReservation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/view_reservation"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_menu_today"
            android:drawablePadding="8dp" />

        <!-- Notifications -->
        <Button
            android:id="@+id/btnNotifications"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/notifications"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_dialog_email"
            android:drawablePadding="8dp" />

        <!-- User Menu -->
        <Button
            android:id="@+id/btnUserMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="@string/user_menu"
            android:textSize="10sp"
            android:drawableTop="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
